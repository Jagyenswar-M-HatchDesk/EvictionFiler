@rendermode InteractiveServer

<style>
    .menu-items {
        display: flex;
        align-items: center;
        font-family: Montserrat', sans-serif;
    }

    .menu-navlabel {
        font-family: 'Montserrat', sans-serif;
        font-weight: 500;
        color: black;
        cursor: pointer !important;
    }
</style>


<div class="row align-items-center shadow-sm p-2 bg-body-tertiary rounded">
    <div class="col-3 d-flex align-items-center mt-2">
        <div class="position-relative ms-3" style="cursor: pointer;" title="Notification">
            <i class="fas fa-bell fa-lg text-dark"></i>

            <!-- Notification Badge -->
            <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                3
                <span class="visually-hidden">unread messages</span>
            </span>
        </div>
    </div>
    <div class="col-4 d-flex justify-content-between">
        <ul class="d-flex justify-content-between w-100" style="list-style: none; padding-left: 0; font-size: 16px; margin: 0;">
            <li class="menu-items">
                <a title="envelope" class=" text-decoration-none menu-navlabel">

                    <i class="fas fa-envelope"></i>

                </a>
                @* <span style="margin-left: 8px;">Email</span> *@
            </li>
            <li class="menu-items">
                <a title="Reminder" class=" text-decoration-none menu-navlabel">
                    <i class="fas fa-clock"></i>

                </a>


            </li>
            <li class="menu-items">
                <a title="Draft" class=" text-decoration-none menu-navlabel">


                    <i class="fas fa-file-alt"></i>
                </a>


            </li>
            <li class="menu-items">
                <a title="Upload" class=" text-decoration-none menu-navlabel">

                    <i class="fas fa-upload"></i>
                </a>

            </li>
            <li class="menu-items">
                <a title="Download" class=" text-decoration-none menu-navlabel">



                    <i class="fas fa-download"></i>
                </a>
            </li>
            <li class="menu-items">
                <a title="Send" class=" text-decoration-none menu-navlabel">
                    <i class="fas fa-paper-plane"></i>

                </a>

            </li>
            <li class="menu-items">
                <a title="Edit" class=" text-decoration-none menu-navlabel">
                    <i class="fas fa-edit"></i>

                </a>


            </li>
        </ul>
    </div>
    <div class="col-5 d-flex justify-content-end">
        <input type="text"
               placeholder="Ask anything (e.g. What is the MDR for 123 Flatbush Ave?)"
               style="width: 100%; padding: 7px 20px; font-size: 13px; border: 1px solid #ccc; border-radius: 8px;" />
        <button style="margin-left: 10px; background-color: #1F365D; color: white; border: none; padding: 4px 16px; border-radius: 8px; cursor: pointer;">
            <i class="fas fa-search"></i>
        </button>
    </div>
</div>

