                    </div>
                    <div class="col-md-2">
                        <label for="f-to" class="form-label">Date To</label>
                        <InputDate id="f-from" class="form-control" @bind-Value="hearingDto.HearingDateTo" @bind-Value:after="ApplyFilters" />
                    </div>
                    <div class="col-md-2">
                        <label class="form-label ">Court <span class="text-danger">*</span></label>
                        <InputSelect class="form-select" @bind-Value="hearingDto.CourtLocationId" style="cursor:pointer;" @onmousedown="ShowAllCourts" @bind-Value:after="SelectCourt">
                            <option value="">-- Select --</option>
                            @foreach (var l in filteredCourts)
                            {
                                <option value="@l.Id">@l.Court</option>
                            }
                        </InputSelect>
                        <ValidationMessage For="() => hearingDto.CourtLocationId" />
                    </div>
                    <div class="col-md-2">
                        <label for="f-part" class="form-label">Court Part</label>
                        <InputSelect class="form-select" @bind-Value="hearingDto.CourtPartId" @bind-Value:after="SelectCourtPart">
                            <option value="">-- Select --</option>
                            @foreach (var l in CourtPartList)
                            {
                                <option value="@l.Id">@l.Part</option>
                            }
                        </InputSelect>
                    </div>

                    <div class="col-md-2">
                        <label for="f-room" class="form-label">Room</label>
                        <InputText id="f-from" class="form-control" placeholder="Enter Room" @bind-Value="hearingDto.RoomNo" @bind-Value:after="ApplyFilters" />
                    </div>
                  

                </div>
                <div class="row mt-2 g-3">
                    <div class="col-12">
                        <div class="row">
                            <div class="col-md-2">
                                <label for="f-type" class="form-label">Case Type</label>
                                <InputSelect class="form-select" @bind-Value="hearingDto.CaseTypeId" @bind-Value:after="ApplyFilters">
                                    <option value="">-- Select --</option>
                                    @foreach (var l in CaseTypeList)
                                    {
                                        <option value="@l.Id">@l.Name</option>
                                    }
                                </InputSelect>
                            </div>
                            <div class="col-md-2">
                                <label for="f-judge" class="form-label">Judge</label>
