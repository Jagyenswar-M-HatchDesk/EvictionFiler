<style>
    .search-box {
    width: 100%;
    padding-right: 3rem; /* space for the button */
    padding-left: 1rem;
    /* border-radius: 1.5rem; */
    border: 2px solid #1F365D;
    background-color: #FFF; /* dark background */
    color: black;
    height: 2.5rem;
    }

    .search-box::placeholder {
    color: darkgrey;
    }

    .search-box:focus {
    outline: none;
    box-shadow: 0 0 0 2px rgba(255, 255, 255, 0.2);
    background: #c6d1e3;
    }

    .search-btn {
    position: absolute;
    right: 0.7rem;
    top: 50%;
    transform: translateY(-50%);
    border: none;
    background: none;
    color: #1F365D;
    cursor: pointer;
    padding: 0;
    font-size: 1.2rem;
    }

    .search-btn:hover {
    color: #1F365D;
    }
</style>


<body class="p-4">
    <nav aria-label="breadcrumb" class="mt-2">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/dashboard">Home</a></li>
            <li class="breadcrumb-item ">Settings</li>
            <li class="breadcrumb-item ">Landlord Types</li>

        </ol>
    </nav>
    <div class="container p-4 rounded shadow-sm">

        <!-- Title Row -->
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h5 class="m-0">Manage Landlord Type</h5>
        </div>

        <!-- Search Filters -->
        <div class="g-2 mb-3 d-flex justify-content-between align-items-center">
            <!-- Four default search boxes -->
            <button class="btn btn-primary" @onclick="ShowCreateLandlordType">Add New</button>
            <div class="position-relative w-50">
                <input class="form-control border border-primary text-navy" placeholder="Search.." @bind="searchTerm" @bind:event="oninput" />
                <button class="search-btn" type="button">
                    <i class="fa fa-search"></i>
                </button>
            </div>

        </div>

        <!-- Data Table -->
        <div style="max-height: 400px; overflow-y: auto; overflow-x: auto;">
            <table class="table table-bordered mt-4" style="min-width: 800px;">
                <thead class="table-light">
                    <tr>
                        <th>Sl no</th>
                        <th>Name</th>
                       
                        <th>Created Date</th>
                        <th class="sticky">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (pagedLandlordType != null && pagedLandlordType.Items.Any())
                    {
                        int index = 1;
                        @foreach (var form in pagedLandlordType.Items)
                        {
                            <tr>
                                <td>@index</td>
                                <td>@form.Name</td>
                             
                                <td>@form.CreatedOn.ToString(DateFormats.Default)</td>
                                <td class="sticky">
                                    <i class="fa-solid fa-pen-to-square text-navy me-3 " @onclick="async () => await ShowAddEditLandlordType(form.Id)"
                                       style="cursor: pointer;" title="Edit"></i>
                                    <i class="fa-solid fa-trash-can text-danger " @onclick=" ()=>DeleteLandlordType(form.Id)" style="cursor: pointer;" title="Delete"></i>
                                </td>
                            </tr>
                            index++;
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="4" class="text-muted text-center">No notices generated yet.</td>
                        </tr>
                    } 
                </tbody>
            </table>
        </div>

        <!-- Pagination -->
        @if (pagedLandlordType != null && pagedLandlordType.TotalCount > 0)
        {
            <div class="d-flex justify-content-between mt-3">
                <small>
                    Showing @(((currentPage - 1) * pageSize) + 1)
                    to @(Math.Min(currentPage * pageSize, pagedLandlordType.TotalCount))
                    of @pagedLandlordType.TotalCount entries
                </small>
                <nav>
                    <ul class="pagination mb-0">
                        <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                            <button class="page-link" @onclick="() => ChangePage(currentPage - 1)">←</button>
                        </li>
                        @for (int i = 1; i <= Math.Ceiling((double)pagedLandlordType.TotalCount / pageSize); i++)
                        {
                            var pageNumber = i;
                            <li class="page-item @(pageNumber == currentPage ? "active" : "")">
                                <button class="page-link" @onclick="() => ChangePage(pageNumber)">@pageNumber</button>
                            </li>
                        }
                        <li class="page-item @(currentPage == Math.Ceiling((double)pagedLandlordType.TotalCount / pageSize) ? "disabled" : "")">
                            <button class="page-link" @onclick="() => ChangePage(currentPage + 1)">→</button>
                        </li>
                    </ul>
                </nav>
            </div>
        }


    </div>


    @if (_showCreateLandlordType)
    {
        <CreateLandlordType createLandlordType="LandlordTypeDto" OnClose="HandleCloseCreateLandlordType" />
    }

    @if (_showEditLandlordType)
    {
        <EditLandlordType editLandlordType="LandlordTypeDto" OnClose="HandleCloseEditLandlordType" />
    }
</body>


@code {

    private bool _showCreateLandlordType = false;
    private bool _showEditLandlordType = false;
    private Guid? LandlordTypeIdForEdit;
    private EditToLandlordTypeDto LandlordTypeDto = new();
    private string successMessage;
    private int currentPage = 1;
    private int pageSize = 10;
    private string searchTerm = "";
    private PaginationDto<EditToLandlordTypeDto> pagedLandlordType;

    protected override async Task OnInitializedAsync()
    {
        Spinnerservice.Show();
        //isLoading = true;
        var uri = new Uri(navManager.Uri);
        var query = Microsoft.AspNetCore.WebUtilities.QueryHelpers.ParseQuery(uri.Query);

        if (query.TryGetValue("success", out var isSuccess) && isSuccess == "true")
        {
            successMessage = "Landlord Type  submitted successfully!";
            StateHasChanged();

            await Task.Delay(2000);
            successMessage = string.Empty;
            StateHasChanged();

            navManager.NavigateTo("/Settings/landlord-type", forceLoad: false);
        }

        // ✅ Edit success message
        else if (query.TryGetValue("edit", out var isEdit) && isEdit == "true")
        {
            successMessage = "Landlord Type updated successfully!";
            StateHasChanged();

            await Task.Delay(2000);
            successMessage = string.Empty;
            StateHasChanged();

            navManager.NavigateTo("/Settings/landlord-type", forceLoad: false);
        }
        await Task.Delay(1000);
        await LoadLandlordTypes();
        Spinnerservice.Hide();
    }

    private async Task LoadLandlordTypes()
    {
        pagedLandlordType = await LandlordTypeService.GetAllLandlordTypeAsync(currentPage, pageSize, searchTerm);
    }


    private void ShowCreateLandlordType()
    {
        LandlordTypeDto = new EditToLandlordTypeDto();
        _showCreateLandlordType = true;
    }


    private void HandleCloseCreateLandlordType()
    {
        _showCreateLandlordType = false;
    }

    private void HandleCloseEditLandlordType()
    {
        _showEditLandlordType = false;
    }


    private async Task ChangePage(int page)
    {
        if (page >= 1 && page <= Math.Ceiling((double)pagedLandlordType.TotalCount / pageSize))
        {
            currentPage = page;
            await LoadLandlordTypes();
        }
    }

    private async Task ShowAddEditLandlordType(Guid? LandlordTypeId = null)
    {
        
        LandlordTypeIdForEdit = LandlordTypeId;

        var form = await LandlordTypeService.GetLandlordTypeByIdAsync(LandlordTypeId);

        if (form != null)
        {
            LandlordTypeDto = new EditToLandlordTypeDto
                {
                    Id = form.Id, 
                    Name = form.Name,

                };

            _showEditLandlordType = true;
        }
    }
  
   public async Task DeleteLandlordType(Guid id)
    {
        bool isDeleted = await LandlordTypeService.DeleteLandlordTypeAsync(id);

        if (isDeleted)
        {
        
            pagedLandlordType = await LandlordTypeService.GetAllLandlordTypeAsync(currentPage, pageSize , searchTerm);
            StateHasChanged();
        }
    }
    


}

