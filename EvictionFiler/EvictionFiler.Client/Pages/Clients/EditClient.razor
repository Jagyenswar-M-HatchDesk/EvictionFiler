    private async Task SubmitUpdateClientAsync()
    {
        if (editClient == null || editClient.Id == Guid.Empty)
            return;

        // 👇 Attach landlords, buildings, and tenants to client DTO
        editClient.editLandLords = Landlords;
        foreach (var landlord in editClient.editLandLords)
        {
            landlord.editBuildings = Buildings.Where(b => b.LandlordId == landlord.Id).ToList();

            foreach (var building in landlord.editBuildings)
            {
                building.editTenants = Tenants.Where(t => t.BuildingId == building.Id).ToList();
            }
        }

        // 🔥 Call only one method
        var isClientUpdated = await _clientService.UpdateClientAsync(editClient);
        if (!isClientUpdated)
            return;

        Navigation.NavigateTo("/clients?edit=true", true);
    }



