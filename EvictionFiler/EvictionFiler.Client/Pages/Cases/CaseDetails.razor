    {
        spinnerservice.Show();
        bool isDeleted = await _service.DeleteCaseDocument(id);

        if (isDeleted)
        {
            await LoadCaseDocument();
            ToastService.ShowSuccess("File  has been Deleted successfully!");
            StateHasChanged();
        }
        spinnerservice.Hide();
    }
