                                                        if (!string.IsNullOrWhiteSpace(legalcaseDto.BuildingAddress)) partBuilding.Add(legalcaseDto.BuildingAddress);
                                                        // if (!string.IsNullOrWhiteSpace(legalcaseDto.Address2)) partBuilding.Add(legalcaseDto.Address2);
