            if (string.IsNullOrEmpty(value))
            {
                result = null;
                validationErrorMessage = null;
                return true;
            }

            if (bool.TryParse(value, out var parsed))
            {
                result = parsed;
                validationErrorMessage = null;
                return true;
            }

            result = null;
            validationErrorMessage = "Invalid selection.";
            return false;
        }
    }


