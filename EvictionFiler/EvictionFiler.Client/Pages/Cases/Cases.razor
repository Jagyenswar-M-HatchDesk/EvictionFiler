<body class="p-4">
    <nav aria-label="breadcrumb" class="mt-2">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/dashboard" class="case-bread">Home</a></li>
            <li class="breadcrumb-item ">Cases Workspace</li>

        </ol>
    </nav>
    <div class="container p-4 rounded shadow-sm mt-4">
        <EditForm EditContext="_editContext">
            <DataAnnotationsValidator />
            <!-- Title Row -->
