    .form-container {
        max-width: 700px;
        margin: 80px auto;
        background-color: #f4f4f9;
        border-radius: 12px;
        box-shadow: 0 0 20px rgba(0,0,0,0.1);
        padding: 2rem;
        font-family: 'Segoe UI', sans-serif;
    }

    .form-section {
        display: flex;
        flex-wrap: wrap;
        gap: 1rem;
    }

    .form-group {
        flex: 1 1 48%;
        display: flex;
        flex-direction: column;
    }

        .form-group.full {
            flex: 1 1 100%;
        }

    label {
        margin-bottom: 0.5rem;
        font-weight: 600;
    }

    input, select {
        padding: 0.75rem;
        border: 1px solid #ccc;
        border-radius: 6px;
        font-size: 1rem;
    }

    .button-group {
        display: flex;
        justify-content: space-between;
        margin-top: 2rem;
    }

    button {
        padding: 0.75rem 1.5rem;
        border: none;
        border-radius: 6px;
        font-size: 1rem;
        cursor: pointer;
    }

        button.save {
            background-color: #6c757d;
            color: white;
        }

        button.next {
            background-color: #28a745;
            color: white;
        }

        button.back {
            background-color: #007bff;
            color: white;
        }

    .step-title {
        font-size: 1.5rem;
        font-weight: 700;
        margin-bottom: 1rem;
    }

</style>

<style>
    .step-tracker {
        display: flex;
        align-items: center;
        justify-content: center;
        margin-bottom: 2rem;
    }

    .step-item {
        display: flex;
        flex-direction: column;
        align-items: center;
        font-size: 0.9rem;
        color: #999;
    }

        .step-item .circle {
            width: 30px;
            height: 30px;
            border-radius: 50%;
            background: #ccc;
            color: #fff;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: bold;
            margin-bottom: 0.3rem;
        }

    .step-line {
        width: 40px;
        height: 2px;
        background: #ccc;
        margin: 0 0.5rem;
    }

    .step-item.active .circle {
        background: #28a745;
    }

    .step-item.done .circle {
        background: #28a745;
    }

    .step-item.active span,
    .step-item.done span {
        color: #28a745;
    }

</style>

<div class="step-tracker">
    @for (int i = 0; i < stepTitles.Count; i++)
    {
        <div class="step-item @(i < currentStep ? "done" : i == currentStep ? "active" : "")">
            <div class="circle">
                @(i < currentStep ? "✓" : (i + 1).ToString())
            </div>
            @* <span>@stepTitles[i]</span> *@
        </div>

        @if (i < stepTitles.Count - 1)
        {
            <div class="step-line"></div>
        }
    }
</div>
