    .status-delete,
    .status-archive {
        padding: 2px 7px;
        border-radius: 1rem;
        font-size: 12px;
        color: #fff;
    }

    .status-active {
        background-color: #198754;
    }

    .status-delete {
        background-color: #dc3545;
    }

    .status-archive {
        background-color: #ffc107;
    }

    /* -------------------------------------------------------
           Container (renamed to avoid overriding Bootstrap)
        --------------------------------------------------------*/
