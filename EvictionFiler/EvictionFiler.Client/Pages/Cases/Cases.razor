@page "/createcase"
@rendermode InteractiveAuto
<style>
/* PROGRESS BAR STYLES */
.progress-bar-wrapper {
 /*    max-width: 800px; */
    margin: 30px auto 60px auto;
    position: relative;
    padding: 0 10px;
}

.step-track {
    display: flex;
    justify-content: space-between;
    position: relative;
}

.step-track::before {
    content: '';
    position: absolute;
    top: 18px;
    left: 0;
    right: 0;
    height: 4px;
    background-color: #ddd;
    z-index: 0;
    border-radius: 4px;
}

.step-item {
    position: relative;
    text-align: center;
    flex: 1;
    z-index: 1;
    color: #ccc;
    font-size: 14px;
    font-weight: 500;
}

.step-item .step-circle {
    width: 36px;
    height: 36px;
    line-height: 36px;
    border-radius: 50%;
    margin: 0 auto 8px auto;
    background-color: #ccc;
    color: white;
    font-weight: bold;
    display: flex;
    justify-content: center;
    align-items: center;
    transition: all 0.3s ease;
}

.step-item.active .step-circle {
    background-color: #D4A844;
    color: white;
}

.step-item.done .step-circle {
    background-color: #D4A844;
    content: "✓";
}

.step-item.active,
.step-item.done {
    color: #1F365D;
}

.step-fill {
    position: absolute;
    top: 18px;
    left: 0;
    height: 4px;
    background-color: #D4A844;
    z-index: 0;
    border-radius: 4px;
    transition: width 0.4s ease;
}

/* FORM STYLES */
.form-container {
    max-width: 800px;
    margin: auto;
    background: white;
    padding: 2rem;
    border-radius: 10px;
    box-shadow: 0 3px 10px rgba(0,0,0,0.1);
}

.form-section {
    margin-bottom: 2rem;
    padding: 1rem;
    border-radius: 8px;
}

.form-label {
    font-weight: 600;
    margin-bottom: 0.5rem;
    display: block;
    color: #1F365D;
}

.form-select, .form-control {
    width: 100%;
    padding: 0.5rem;
    border-radius: 6px;
    border: 1px solid #ced4da;
    font-size: 1rem;
}

/* BUTTON STYLES */
.button-group {
    padding-top: 1.5rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-top: 2rem;
}

.btn {
    padding: 0.5rem 1.25rem;
    font-size: 1rem;
    border-radius: 6px;
    min-width: 120px;
    border: none;
}

.btn-back {
    background-color: #1F365D;
    color: white;
    border: none;
}

.btn-next {
    background-color: #D4A844;
    color: white;
    border: none;
}

.btn-warning:hover {
    background-color: #D4A844;
    color: white;
}

.btn-success:hover {
    background-color: #28a745;
    color: white;
}

.btn-back:hover {
    background-color: #1F365D;
    color: white;
}

.btn-next:hover {
    background-color: #D4A844;
    color: white;
}

.btn:disabled {
    opacity: 0.6;
    cursor: not-allowed;
}

.btn-outline-secondary {
    background-color: transparent;
    color: #1F365D;
    border: 2px solid #1F365D;
}

.heading-line {
    border: none;
    height: 2px;
    background-color: #D4A844;
    margin: 0 auto 1.5rem auto;
    width: 100%;
}
</style>

<!-- Step Tracker -->
<div class="progress-bar-wrapper">
    <div class="step-track">
        <div class="step-fill" style="width: @(currentStep * 100 / lastStep)%"></div>

        @for (int i = 0; i < stepTitles.Count; i++)
        {
            var statusClass = i < currentStep ? "step-item done" : i == currentStep ? "step-item active" : "step-item";

            <div class="@statusClass">
                <div class="step-circle">
                    @(i < currentStep ? "✓" : (i + 1).ToString())
                </div>
            </div>
        }
    </div>
</div>

<!-- Form Content -->
<div class="form-container">
    @if (currentStep == 0)
    {
        <div>
            <h5 class="text-center mb-2" style="color:#1F365D">Basic Information</h5>
            <hr class="heading-line" />

            <div class="form-section">
                <!-- Client Role Dropdown -->
                <div class="form-group mb-3">
                    <label class="form-label">Client Role</label>
                    <select class="form-select" @bind="selectedClientRole">
                        <option value="">-- Select Client Role --</option>
                        <option value="Landlord/Owner">Landlord/Owner</option>
                        <option value="Tenant/Occupant">Tenant/Occupant</option>
                        <option value="Property Manager">Property Manager</option>
                        <option value="Legal Representative">Legal Representative</option>
                    </select>
                </div>
                @if (selectedClientRole == "Legal Representative")
                {
                    <div class="form-group">
                        <label class="form-label">Please specify other case type</label>
                        <input type="text" class="form-control mb-2" @bind="otherCaseType" placeholder="Enter Representative Name" />
                    </div>
                }
                <!-- Case Type Dropdown -->
                <div class="form-group mb-3">
                    <label class="form-label">Case Type</label>
                    <select class="form-select" @bind="selectedCaseType">
                        <option value="">-- Select Case Type --</option>
                        <option>Nonpayment</option>
                        <option>Holdover</option>
                        <option>Licensee</option>
                        <option>Lockout</option>
                        <option>HP Action</option>
                        <option>For Good Cause (6-A)</option>
                        <option>Succession</option>
                        <option>Other</option>
                    </select>
                </div>

                @if (selectedCaseType == "Other")
                {
                    <div class="form-group">
                        <label class="form-label">Please specify other case type</label>
                        <input type="text" class="form-control" @bind="otherCaseType" placeholder="Enter case type" />
                    </div>
                }
            </div>
        </div>
    }
</div>

    <!-- Button Group -->
<!-- Button Group -->
<div class="button-group">
    <button class="btn btn-back" @onclick="Back">← Back</button>

    <div class="d-flex gap-2">
        @if (currentStep > 0 && currentStep < lastStep)
        {
            <button class="btn btn-warning" @onclick="SaveAsDraft">Save as Draft</button>
        }
        @if (currentStep < lastStep)
        {
            <button class="btn btn-next" @onclick="Next">Next →</button>
        }
        @if (currentStep == lastStep)
        {
            <button class="btn btn-success" @onclick="Submit">✅ Submit</button>
        }
    </div>
</div>


@code {
    int currentStep = 0;
    int lastStep = 9;
    List<string> stepTitles = new() {
        "Case Type and Client Role", "Tenant Information", "Landlord / Owner Information",
        "Property Manager / Building Manager", "Building / Property Details",
        "For Good Cause Eviction (Article 6-A)", "Additional NYC Properties (Landlord Only)",
        "Court & Document Status", "Supporting Documents", "Final Declarations"
    };

    string selectedClientRole;
    string selectedCaseType;
    string otherCaseType;

    void SaveAsDraft() => Console.WriteLine("Saving Draft...");
    void Next() => currentStep++;
    void Back() => currentStep--;
    void Submit() => Console.WriteLine("Submitting...");
}
