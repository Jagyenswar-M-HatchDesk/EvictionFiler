    private async Task OnSearchChanged(ChangeEventArgs e, string field)
    {
        var value = e.Value?.ToString() ?? string.Empty;
        _cts?.Cancel();
        _cts = new CancellationTokenSource();

        try
        {
            await Task.Delay(300, _cts.Token);

            switch (field)
            {
                case "CaseCode":
                    searchcasecode = value;
                    break;
                case "Client":
                    searchTermClient = value;
                    break;
                case "Tenant":
                    searchTermTenant = value;
                    break;
                case "Landlord":
                    searchTermLandLord = value;
                    break;
                case "ReasonHoldover":
                    searchTermResonHoldover = value;
                    break;
                case "ActionDate":
                    searchTermDate = value;
                    break;
                case "Status":
                    searchTermStatus = value;
                    break;
            }
            IsClearbtndisable = false;
            currentPage = 1; // new search ke time page reset ho jaye
            await GetAllCases();
        }
        catch (TaskCanceledException)
        {

        }
    }



    private async Task ChangePage(int page)
    {
        if (page >= 1 && page <= Math.Ceiling((double)pagedcases.TotalCount / pageSize))
        {
            currentPage = page;
            await GetAllCases();
        }
    }

