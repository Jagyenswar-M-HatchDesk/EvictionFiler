<body class="p-4">
    <nav aria-label="breadcrumb" class="mt-2">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/dashboard" class="case-bread">Home</a></li>
            <li class="breadcrumb-item case-bread" style="text-decoration:none;">Cases Workspace</li>

        </ol>
    </nav>
    <div class="case-container p-4 rounded shadow-sm mt-4">

        <!-- Title Row -->
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h5 class="m-0 flex-fill page-title">Cases Workspace</h5>
            <div class="d-flex flex-fill gap-2 justify-content-end">
                <div class="btn-group view-toggle">
                    <button id="cardViewBtn" class=@(IsGridView ? "btn btn-primary btn-grid btn-sm" : "btn btn-grid btn-outline-secondary btn-sm") @onclick="OnViewTypeChange">
                        <i class="bi bi-grid"></i>
                    </button>
                    <button id="tableViewBtn" class=@(IsGridView ? "btn btn-table btn-outline-secondary btn-sm" : "btn btn-table btn-primary btn-sm") @onclick="OnViewTypeChange">
                        <i class="bi bi-table"></i>
                    </button>
                </div>
                <div class="col-4">
                    <select id="casetype" class="form-input" style="min-height: 45px;"
                            @bind="selectedCaseTypeId"
                            @bind:after="OnCaseTypeChanged">

                        <option value=""> All Case Types</option>

                        @foreach (var l in CaseTypeList)
                        {
                            <option value="@l.Id">@l.Name</option>
                        }
                    </select>


                    @* <ValidationMessage For="() => legalcaseDto.CaseTypeId" /> *@
                </div>
                <button class="btn btn-primary" title="Clear all Search" disabled="@IsClearbtndisable" @onclick="ClearAll" style="font-size:14px"><i class="fa-solid fa-arrows-rotate"></i></button>
                <button class="btn btn-primary create-btn" @onclick="navigatetoCase"><i class="fa-solid fa-file-circle-plus"></i> Create Case</button>

            </div>
        </div>

        <!-- Search Filters -->
        <div class="row g-2 mb-4">
            <!-- Four default search boxes -->
            <div class="col-md-3 position-relative">
                <input class="form-input" placeholder="Search by Case Code" @bind="searchcasecode" @oninput="@(e => OnSearchChanged(e, "CaseCode"))" />
                <button class="search-btn" type="button">
                    <i class="fa fa-search"></i>
                </button>
            </div>
            <div class="col-md-3 position-relative">
                <input class="form-input" placeholder="Search by Client" @bind="searchTermClient" @oninput="@(e => OnSearchChanged(e, "Client"))" />
                <button class="search-btn" type="button">
                    <i class="fa fa-search"></i>
                </button>
            </div>
            <div class="col-md-3 position-relative">
                <input class="form-input" placeholder="Search by Tenant" @bind="searchTermTenant" @oninput="@(e => OnSearchChanged(e, "Tenant"))" />
                <button class="search-btn" type="button">
                    <i class="fa fa-search"></i>
                </button>
            </div>
            <div class="col-md-3 d-flex align-items-center">
                <button type="button"
                        class="btn btn-outline-secondary adv-btn w-100 @(ShowAdvancedFilters ? "active-adv-btn" : "")"
                        @onclick="ToggleAdvanced">
                    Advanced <span>@(ShowAdvancedFilters ? "▲" : "▼")</span>
                </button>



            </div>
        </div>

        <!-- Advanced Filters -->
        @if (ShowAdvancedFilters)
        {
            <div class="mb-3" id="advancedFilters">
                <div class="row g-2">
                    <div class="col-md-3 position-relative">
                        <input class="form-input" placeholder="Search by LandLord" @bind="searchTermLandLord" @oninput="@(e => OnSearchChanged(e, "Landlord"))" />
                        <button class="search-btn" type="button">
                            <i class="fa fa-search"></i>
                        </button>
                    </div>
                    <div class="col-md-3 position-relative">
                        <input class="form-input" placeholder="Search by Reason" @bind="searchTermResonHoldover" @oninput="@(e => OnSearchChanged(e, "ReasonHoldover"))" />
                        <button class="search-btn" type="button">
                            <i class="fa fa-search"></i>
                        </button>
                    </div>

                    <div class="col-md-3 position-relative">
                        <input class="form-input" placeholder="Search by Action Date" @bind="searchTermDate" @oninput="@(e => OnSearchChanged(e, "ActionDate"))" />
                        <button class="search-btn" type="button">
                            <i class="fa fa-search"></i>
                        </button>
                    </div>
                    @*  <div class="col-md-3 position-relative">
                            <input class="form-control search-box" placeholder="Search by Status" @bind="searchTermStatus" @oninput="@(e => OnSearchChanged(e, "Status"))" />
                            <button class="search-btn" type="button">
                                <i class="fa fa-search"></i>
                            </button>
                        </div> *@

                </div>
            </div>
        }


        @if (IsGridView)
        {
            <div class="row g-4">
                @if (pagedcases != null && pagedcases.Items.Any())
                {
                    @foreach (var cas in pagedcases.Items)
                    {

                        <!-- CARD -->
                        <div class="col-md-6 col-xl-4">
                            <div class="card case-card">
                                <div class="case-header">
                                    <div class="d-flex">
                                        <span style="font-size:16px; font-weight:600;">@cas.Casecode</span>

                                        <span class="badge badge-type mb-2 ms-2">@cas.CaseType?.Name</span>
                                    </div>
                                    <div class="case-actions d-flex">

                                        <i class="fa-solid fa-pen-to-square text-navy me-2" style="cursor:pointer"
                                           @onclick="@(() => EditCase(cas.Id))"
                                           title="Edit"></i>
                                        <i class="fa-solid fa-trash-can text-navy  me-2" title="Delete" style="cursor:pointer" @onclick="@(() => DeleteCase(cas.Id, isAdmin))"></i>
                                        <i class="fa-solid  fa-circle-info text-navy" title="Info" style="cursor:pointer" @onclick="@(() => CaseDetails(cas.Id))"></i>
                                    </div>
                                </div>
                                <div class="case-body">
                                    <div class="mt-2 mb-1 row"><span class="col-auto title">Client: </span><span class="col value">@cas.Clients?.FirstName @cas.Clients?.LastName - @cas.Clients?.ClientCode</span></div>
                                    <div class="mb-1 row"><span class="col-auto title">Landlord: </span><span class="col value">@cas.LandLords?.FirstName @cas.LandLords?.LastName - @cas.LandLords?.LandLordCode</span></div>
                                    <div class="mb-3 row"><span class="col-auto title">Tenant: </span><span class="col value">@cas.Tenants?.FirstName @cas.Tenants?.LastName - @cas.Tenants?.TenantCode</span></div>



                                </div>
                                <hr style="margin:0;" />
                                <div class="row p-3">
                                    <div class="col-10" style="align-content:end;">
                                        @if (cas.UpdatedOn == null)
                                        {
                                            <div class="card-footer-data" style="margin-bottom:0px"><span class="label-1">Created On: </span><span class="value-1">@cas.CreatedOn.ToString(DateFormats.Default)</span></div>
                                        }
                                        else
                                        {
                                            <div class="card-footer-data" style="margin-bottom:0px"><span class="label-1">Updated On:  </span><span class="value-1">@cas.UpdatedOn?.ToString(DateFormats.Default)</span></div>
                                        }
                                    </div>

                                    <div class="col-2">
                                        @* <span class="badge badge-type" style="margin-bottom:0px !important">
                                                @(cas.IsActive == true? "Active" : cas.IsDeleted == true ? "InActive" : "Not Set")
                                                </span> *@
                                        <span class="badge badge-type
                                                                                                             @(cas.IsActive ? "bg-success text-white" : cas.IsDeleted == true ? "bg-secondary text-white" : "bg-warning text-dark")" style="margin-bottom:0px !important">
                                            @(cas.IsActive ? "Active" : cas.IsDeleted == true ? "InActive" : "Not Set")
                                        </span>



                                    </div>

                                </div>
                            </div>
                        </div>


                    }
                }
                else
                {

                    <p class="text-muted text-center fs-5">No Cases found.</p>

                }

            </div>

        }
        else
        {
            <!-- Data Table -->
            <div class="table-responsive mb-3">
                <table class="table table-hover align-middle text-center" style="margin-bottom: 0px;font-size:14px">
                    <thead>
                        <tr>
                            <th>Case Code</th>
                            <th>Case Type</th>
                            <th>Client </th>
                            <th>LandLord </th>
                            <th>Tenant </th>
                            @if (isAdmin)
                            {

                                <th>Created By</th>
                            }
                            <th>Last Action Date</th>
                            <th>Status</th>

                            <th class="sticky">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (pagedcases != null && pagedcases.Items.Any())
                        {
                            @foreach (var cas in pagedcases.Items)
                            {


                                <tr>
                                    <td>@(cas?.Casecode ?? "")</td>
                                    <td>@(cas?.CaseType?.Name ?? "-")</td>
                                    <td>
                                        @($"{cas?.Clients?.ClientCode ?? ""} - {cas?.Clients?.FirstName ?? ""} {cas?.Clients?.LastName ?? ""}")
                                    </td>
                                    <td>
                                        @($"{cas?.LandLords?.LandLordCode ?? ""} - {cas?.LandLords?.FirstName ?? ""} {cas?.LandLords?.LastName ?? ""}")
                                    </td>

                                    <td>
                                        @($"{cas?.Tenants?.TenantCode ?? ""} - {cas?.Tenants?.FirstName ?? ""} {cas?.Tenants?.LastName ?? ""}")
                                    </td>
                                    @if (isAdmin)
                                    {

                                        <td>@(cas?.CreatedByName ?? "-")</td>
                                    }
                                <td>@( cas?.CreatedOn.ToString(DateFormats.Default))</td>
                                <td>
                                    @(cas.IsActive == true
                                                                ? "Active"
                                                                : cas.IsDeleted == true
                                                                ? "InActive"
                                                                : "Not Set")
                        </td>



                                    <td class="sticky">
                                        <i class="fa-solid fa-pen-to-square text-navy me-2" style="cursor:pointer"
                                           @onclick="@(() => EditCase(cas.Id))"
                                           title="Edit"></i>
                                        <i class="fa-solid fa-trash-can text-navy  me-2" title="Delete" style="cursor:pointer" @onclick="@(() => DeleteCase(cas.Id, isAdmin))"></i>
                                        <i class="fa-solid  fa-circle-info text-navy" title="Info" style="cursor:pointer" @onclick="@(() => CaseDetails(cas.Id))"></i>
                                    </td>

                                </tr>


                                        }
                        }
                        else
                        {
                            <tr>
                                <td colspan="10" class="text-muted">No Cases found.</td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        }


        <!-- Pagination -->
        @if (pagedcases != null && pagedcases.TotalCount > 0)
        {
            <div class="d-flex justify-content-between mt-3">
                <small style="font-size:14px">
                    Showing @(((currentPage - 1) * pageSize) + 1)
                    to @(Math.Min(currentPage * pageSize, pagedcases.TotalCount))
                    of @pagedcases.TotalCount entries
                </small>
                <nav>
                    <ul class="pagination mb-0" style="font-size:14px">
                        <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                            <button class="page-link" @onclick="() => ChangePage(currentPage - 1)">←</button>
                        </li>
                        @for (int i = 1; i <= Math.Ceiling((double)pagedcases.TotalCount / pageSize); i++)
                        {
                            var pageNumber = i;
                            <li class="page-item @(pageNumber == currentPage ? "active" : "")">
                                <button class="page-link" @onclick="() => ChangePage(pageNumber)">@pageNumber</button>
                            </li>
                        }
                        <li class="page-item @(currentPage == Math.Ceiling((double)pagedcases.TotalCount / pageSize) ? "disabled" : "")">
                            <button class="page-link" @onclick="() => ChangePage(currentPage + 1)">→</button>
                        </li>
                    </ul>
                </nav>
            </div>
        }

    </div>

    @if (!string.IsNullOrEmpty(successMessage))
    {
        <div class="position-fixed top-0 end-0 p-3" style="z-index: 1050;">
            <div class="toast show text-white bg-success">
                <div class="d-flex">
                    <div class="toast-body">
                        @successMessage
                    </div>
                    <button type="button" class="btn-close btn-close-white me-2 m-auto"
                            @onclick="() => successMessage = string.Empty"></button>
                </div>
            </div>
        </div>
    }



</body>



<script>
    document.addEventListener("DOMContentLoaded", () => {
        const icon = document.getElementById("advIcon");
        const el = document.getElementById("advancedFilters");

        el.addEventListener("shown.bs.collapse", () => icon.textContent = "▲");
        el.addEventListener("hidden.bs.collapse", () => icon.textContent = "▼");
    });
</script>




@code {

    public string? cases { get; set; }
    public string? client { get; set; }
    public string? tenant { get; set; }
    public string? landlord { get; set; }
    private List<LegalCase> allcases = new List<LegalCase>();
    // private string searchTerm = string.Empty;
    private string searchcasecode = string.Empty;
    private string searchTermClient = string.Empty;
    private string searchTermTenant = string.Empty;
    private string searchTermLandLord = string.Empty;
    private string searchTermCaseType = string.Empty;
    private string searchTermStatus = string.Empty;
    private string searchTermDept = string.Empty;
    private string searchTermDate = string.Empty;
    private string searchTermResonHoldover = string.Empty;

    private List<CaseType> CaseTypeList = new();

    private string showClient = string.Empty;
    private bool ViewSearch = false;

    private PaginationDto<EditToClientDto> AllClients = new();
    private List<EditToClientDto> FilteredClients = new();

    private SelectClientModal clientModal;
    private string successMessage;
    private Guid selectedClientId = new Guid();
    private Guid? selectedCaseTypeId = null;
    private PaginationDto<LegalCase> pagedcases;

    private string searchTerm = "";
    bool isCollapsed = false;
    bool isSettingsMode = false;
    private int currentPage = 1;
    private int pageSize => IsGridView ? 12 : 10;
    private string? loggedInUserId;
    private bool isSuperAdmin = false;
    private bool isAdmin = false;
    private bool IsClearbtndisable = true;
    private bool IsGridView = true;
    private CancellationTokenSource _cts;
    private bool ShowAdvancedFilters = false;

    private LoggedInUser? identityUser;

    // private void EditCase(Guid caseId)
    // {
    //     navManager.NavigateTo($"/EditCase/{caseId}");
    // }

    private void EditCase(Guid caseId)
    {
        navManager.NavigateTo($"/legalcase/{caseId}");
    }

    private void CaseDetails(Guid caseId)
    {
        navManager.NavigateTo($"/legalcase/details/{caseId}");
    }

    private void ToggleAdvanced()
    {
        ShowAdvancedFilters = !ShowAdvancedFilters;
    }

    protected override async Task OnInitializedAsync()
    {
        spinnerservice.Show();
        var loggedInUser = await _loggedInUserService.GetAsync();
        if (loggedInUser.IsAuthenticated)
        {
            this.identityUser = loggedInUser;
            var uri = new Uri(navManager.Uri);
            var query = Microsoft.AspNetCore.WebUtilities.QueryHelpers.ParseQuery(uri.Query);
            if(query!=null && query.Any())
            {
                if (query.TryGetValue("cases", out var caseVal))
                {
                    searchcasecode = caseVal;
                    IsClearbtndisable = false;
                }

                if (query.TryGetValue("tenant", out var tenantVal))
                {
                    searchTermTenant = tenantVal;
                    IsClearbtndisable = false;
                }

                if (query.TryGetValue("client", out var clientVal))
                {
                    searchTermClient = clientVal;
                    IsClearbtndisable = false;
                }

                if (query.TryGetValue("landlord", out var landlordVal))
                {
                    searchTermLandLord = landlordVal;
                    IsClearbtndisable = false;
                }
            }
            CaseTypeList = await CaseTypeRepository.GetAllCaseType();
            await GetAllCases();
        }
        spinnerservice.Hide();
    }



    private async Task GetAllCases()
    {
        var filters = new CaseFilterDto
        {
            CaseCode = searchcasecode,
            Client = searchTermClient,
            Tenant = searchTermTenant,
            LandLord = searchTermLandLord,
            ReasonHoldover = searchTermResonHoldover,
            ActionDate = searchTermDate,
            Status = searchTermStatus,
            CaseTypeId = selectedCaseTypeId

        };

        pagedcases = await _service.GetAllAsync(currentPage, pageSize, filters, identityUser?.UserId??string.Empty, identityUser?.IsSuperAdmin??false);
    }

    private async Task OnCaseTypeChanged()
    {
        currentPage = 1;
        await GetAllCases();
    }
    private async Task OnViewTypeChange()
    {
        IsGridView = !IsGridView;
    }



    public void navigatetoCase()
    {
        navManager.NavigateTo("/legalcase/create");
    }
    public async Task ClearAll()
    {
        if (!IsClearbtndisable)
        {
            searchcasecode = null;
            searchTermTenant = null;
            searchTermClient = null;
            searchTermLandLord = null;
            searchTermCaseType = null;
            searchTermResonHoldover = null;
            searchTermDate = null;
            searchTermStatus = null;

            await GetAllCases();

            IsClearbtndisable = true;
        }
    }

    private async Task OnSearchChanged(ChangeEventArgs e, string field)
    {
        var value = e.Value?.ToString() ?? string.Empty;
        _cts?.Cancel();
        _cts = new CancellationTokenSource();

        try
        {
            await Task.Delay(300, _cts.Token);

            switch (field)
            {
                case "CaseCode":
                    searchcasecode = value;
                    break;
                case "Client":
                    searchTermClient = value;
                    break;
                case "Tenant":
                    searchTermTenant = value;
                    break;
                case "Landlord":
                    searchTermLandLord = value;
                    break;
                case "ReasonHoldover":
                    searchTermResonHoldover = value;
                    break;
                case "ActionDate":
                    searchTermDate = value;
                    break;
                case "Status":
                    searchTermStatus = value;
                    break;
            }
            IsClearbtndisable = false;
            currentPage = 1; // new search ke time page reset ho jaye
            await GetAllCases();
        }
        catch (TaskCanceledException)
        {

        }
    }



    private async Task ChangePage(int page)
