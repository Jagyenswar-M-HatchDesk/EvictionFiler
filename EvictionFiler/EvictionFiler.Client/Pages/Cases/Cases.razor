                            <div class="col-md-6 col-xl-4">
                                <div class="card case-card">
                                    <div class="case-header">
                                        EF000000002
                                    </div>
                                    <div class="case-body">
                                        <span class="badge badge-type mb-2">Holdover</span>

                                        <p class="mt-2 mb-1"><strong>Client:</strong><br>CC000000002 – Rupert Lussen</p>
                                        <p class="mb-1"><strong>Landlord:</strong><br>LL000000002 – Rupert Lussen</p>
                                        <p class="mb-3"><strong>Tenant:</strong><br>TT000000002 – Bohdan Barbashov</p>

                                        <div class="case-actions d-flex gap-2">
                                            <button class="btn btn-sm btn-primary">
                                                <i class="bi bi-pencil"></i>
                                            </button>
                                            <button class="btn btn-sm btn-outline-danger">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                            <button class="btn btn-sm btn-outline-secondary">
                                                <i class="bi bi-eye"></i>
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div> *@
                                }
                    }
                    else
                    {
                    
                        <p class="text-muted text-center fs-5">No Cases found.</p>
                   
                }
                    <!-- Add more cards dynamically -->
                </div>

            }
            else
            {
                <!-- Data Table -->
                <div class="table-responsive mb-3">
                    <table class="table table-hover align-middle text-center" style="margin-bottom: 0px;font-size:14px">
                        <thead>
                            <tr>
                                <th>Case Code</th>
                                <th>Case Type</th>
                                <th>Client </th>
                                <th>LandLord </th>
                                <th>Tenant </th>
                                @if (isAdmin)
                                {

                                    <th>Created By</th>
                                }
                                <th>Last Action Date</th>
                                <th>Status</th>

                                <th class="sticky">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (pagedcases != null && pagedcases.Items.Any())
                            {
                                @foreach (var cas in pagedcases.Items)
                                {


                                    <tr>
                                        <td>@(cas?.Casecode ?? "")</td>
                                        <td>@(cas?.CaseType?.Name ?? "-")</td>
                                        <td>
                                            @($"{cas?.Clients?.ClientCode ?? ""} - {cas?.Clients?.FirstName ?? ""} {cas?.Clients?.LastName ?? ""}")
                                        </td>
                                        <td>
                                            @($"{cas?.LandLords?.LandLordCode ?? ""} - {cas?.LandLords?.FirstName ?? ""} {cas?.LandLords?.LastName ?? ""}")
                                        </td>

                                        <td>
                                            @($"{cas?.Tenants?.TenantCode ?? ""} - {cas?.Tenants?.FirstName ?? ""} {cas?.Tenants?.LastName ?? ""}")
                                        </td>
                                        @if (isAdmin)
                                        {

                                            <td>@(cas?.CreatedByName ?? "-")</td>
                                        }
                                    <td>@( cas?.CreatedOn.ToString(DateFormats.Default))</td>
                                    <td>
                                        @(cas.IsActive == true
                                                                        ? "Active"
                                                                        : cas.IsDeleted == true
                                                                        ? "InActive"
                                                                        : "Not Set")
                            </td>



                                        <td class="sticky">
                                            <i class="fa-solid fa-pen-to-square text-navy me-2" style="cursor:pointer"
                                               @onclick="@(() => EditCase(cas.Id))"
                                               title="Edit"></i>
                                            <i class="fa-solid fa-trash-can text-navy  me-2" title="Delete" style="cursor:pointer" @onclick="@(() => DeleteCase(cas.Id, isAdmin))"></i>
                                            <i class="fa-solid  fa-circle-info text-navy" title="Info" style="cursor:pointer" @onclick="@(() => CaseDetails(cas.Id))"></i>
                                        </td>

                                    </tr>


                                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="10" class="text-muted">No Cases found.</td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            }


            <!-- Pagination -->
            @if (pagedcases != null && pagedcases.TotalCount > 0)
            {
                <div class="d-flex justify-content-between mt-3">
                    <small style="font-size:14px">
                        Showing @(((currentPage - 1) * pageSize) + 1)
                        to @(Math.Min(currentPage * pageSize, pagedcases.TotalCount))
                        of @pagedcases.TotalCount entries
                    </small>
                    <nav>
                        <ul class="pagination mb-0" style="font-size:14px">
                            <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                                <button class="page-link" @onclick="() => ChangePage(currentPage - 1)">←</button>
                            </li>
                            @for (int i = 1; i <= Math.Ceiling((double)pagedcases.TotalCount / pageSize); i++)
                            {
                                var pageNumber = i;
                                <li class="page-item @(pageNumber == currentPage ? "active" : "")">
                                    <button class="page-link" @onclick="() => ChangePage(pageNumber)">@pageNumber</button>
                                </li>
                            }
                            <li class="page-item @(currentPage == Math.Ceiling((double)pagedcases.TotalCount / pageSize) ? "disabled" : "")">
                                <button class="page-link" @onclick="() => ChangePage(currentPage + 1)">→</button>
                            </li>
                        </ul>
                    </nav>
                </div>
            }

        </EditForm>
    </div>

    @if (!string.IsNullOrEmpty(successMessage))
    {
        <div class="position-fixed top-0 end-0 p-3" style="z-index: 1050;">
            <div class="toast show text-white bg-success">
                <div class="d-flex">
                    <div class="toast-body">
                        @successMessage
                    </div>
                    <button type="button" class="btn-close btn-close-white me-2 m-auto"
                            @onclick="() => successMessage = string.Empty"></button>
                </div>
            </div>
        </div>
    }

    <SelectClientModal @ref="clientModal" />

    <!-- Bootstrap JS -->

</body>
