                            <i class="bi bi-table"></i>
                        </button>
                    </div>
                    <div class="col-4">
                        <select id="casetype" class="form-select holdover-form"
                                @bind="selectedCaseTypeId"
                                @bind:after="OnCaseTypeChanged">

                            <option value=""> All Case Types</option>

                            @foreach (var l in CaseTypeList)
                            {
                                <option value="@l.Id">@l.Name</option>
                            }
                        </select>


                        @* <ValidationMessage For="() => legalcaseDto.CaseTypeId" /> *@
                    </div>
                    <button class="btn btn-primary" title="Clear all Search" disabled="@IsClearbtndisable" @onclick="ClearAll" style="font-size:14px"><i class="fa-solid fa-arrows-rotate"></i></button>
                    <button class="btn btn-primary" @onclick="navigatetoCase"><i class="fa-solid fa-file-circle-plus"></i> Create Case</button>

                </div>
            </div>

            <!-- Search Filters -->
            <div class="row g-2 mb-4">
                <!-- Four default search boxes -->
                <div class="col-md-3 position-relative">
                    <input class="form-control search-box" placeholder="Search by Case Code" @bind="searchcasecode" @oninput="@(e => OnSearchChanged(e, "CaseCode"))" />
                    <button class="search-btn" type="button">
                        <i class="fa fa-search"></i>
                    </button>
                </div>
                <div class="col-md-3 position-relative">
                    <input class="form-control search-box" placeholder="Search by Client" @bind="searchTermClient" @oninput="@(e => OnSearchChanged(e, "Client"))" />
                    <button class="search-btn" type="button">
                        <i class="fa fa-search"></i>
                    </button>
                </div>
                <div class="col-md-3 position-relative">
                    <input class="form-control search-box" placeholder="Search by Tenant" @bind="searchTermTenant" @oninput="@(e => OnSearchChanged(e, "Tenant"))" />
                    <button class="search-btn" type="button">
                        <i class="fa fa-search"></i>
                    </button>
                </div>
                <div class="col-md-3 d-flex align-items-center">
                    <button type="button"
                            class="btn btn-outline-secondary adv-btn w-100 @(ShowAdvancedFilters ? "active-adv-btn" : "")"
                            @onclick="ToggleAdvanced">
                        Advanced <span>@(ShowAdvancedFilters ? "▲" : "▼")</span>
                    </button>



                </div>
            </div>

            <!-- Advanced Filters -->
            @if (ShowAdvancedFilters)
            {
                <div class="mb-3" id="advancedFilters">
                    <div class="row g-2">
                        <div class="col-md-3 position-relative">
                            <input class="form-control search-box" placeholder="Search by LandLord" @bind="searchTermLandLord" @oninput="@(e => OnSearchChanged(e, "Landlord"))" />
                            <button class="search-btn" type="button">
                                <i class="fa fa-search"></i>
                            </button>
                        </div>
                        <div class="col-md-3 position-relative">
                            <input class="form-control search-box" placeholder="Search by Reason" @bind="searchTermResonHoldover" @oninput="@(e => OnSearchChanged(e, "ReasonHoldover"))" />
                            <button class="search-btn" type="button">
                                <i class="fa fa-search"></i>
                            </button>
                        </div>

                        <div class="col-md-3 position-relative">
                            <input class="form-control search-box" placeholder="Search by Action Date" @bind="searchTermDate" @oninput="@(e => OnSearchChanged(e, "ActionDate"))" />
                            <button class="search-btn" type="button">
                                <i class="fa fa-search"></i>
                            </button>
                        </div>
                        @*  <div class="col-md-3 position-relative">
                            <input class="form-control search-box" placeholder="Search by Status" @bind="searchTermStatus" @oninput="@(e => OnSearchChanged(e, "Status"))" />
                            <button class="search-btn" type="button">
                                <i class="fa fa-search"></i>
                            </button>
                        </div> *@

                    </div>
                </div>
            }


            @if (IsGridView)
            {
                <div class="row g-4">
                    @if (pagedcases != null && pagedcases.Items.Any())
                    {
                        @foreach (var cas in pagedcases.Items)
                        {

                            <!-- CARD -->
                            <div class="col-md-6 col-xl-4">
                                <div class="card case-card">
                                    <div class="case-header">
                                        <div class="d-flex">
                                            <span style="font-size:16px; font-weight:600;">@cas.Casecode</span>
                                            
                                            <span class="badge badge-type mb-2 ms-2">@cas.CaseType?.Name</span>
                                        </div>
                                        <div class="case-actions d-flex">

                                            <i class="fa-solid fa-pen-to-square text-navy me-2" style="cursor:pointer"
                                               @onclick="@(() => EditCase(cas.Id))"
                                               title="Edit"></i>
                                            <i class="fa-solid fa-trash-can text-navy  me-2" title="Delete" style="cursor:pointer" @onclick="@(() => DeleteCase(cas.Id, isAdmin))"></i>
                                            <i class="fa-solid  fa-circle-info text-navy" title="Info" style="cursor:pointer" @onclick="@(() => CaseDetails(cas.Id))"></i>
                                        </div>
                                    </div>
                                    <div class="case-body">
                                        <div class="mt-2 mb-1 row"><span class="col-auto title">Client: </span><span class="col value">@cas.Clients?.FirstName @cas.Clients?.LastName - @cas.Clients?.ClientCode</span></div>
                                        <div class="mb-1 row"><span class="col-auto title">Landlord: </span><span class="col value">@cas.LandLords?.FirstName @cas.LandLords?.LastName - @cas.LandLords?.LandLordCode</span></div>
                                        <div class="mb-3 row"><span class="col-auto title">Tenant: </span><span class="col value">@cas.Tenants?.FirstName @cas.Tenants?.LastName - @cas.Tenants?.TenantCode</span></div>
                                        
                                        

                                    </div>
                                    <hr  style="margin:0;"/>
                                        <div class="card-footer-data p-3">
                                            <div>
                                                @if (cas.UpdatedOn == null)
                                                {
                                                    <p style="margin-bottom:0px"><span class="title">Created On: </span><span class="value">@cas.CreatedOn.ToString(DateFormats.Default)</span></p>
                                                }
                                                else
                                                {
                                                    <p style="margin-bottom:0px"><span class="title">Updated On:  </span><span class="value">@cas.UpdatedOn?.ToString(DateFormats.Default)</span></p>
                                                }
                                            </div>

                                            <div>
                                            @* <span class="badge badge-type" style="margin-bottom:0px !important">
                                                @(cas.IsActive == true? "Active" : cas.IsDeleted == true ? "InActive" : "Not Set")
                                                </span> *@
                                            <span class="badge badge-type
                                                                         @(cas.IsActive? "bg-success text-white" : cas.IsDeleted == true ? "bg-secondary text-white" : "bg-warning text-dark")" style="margin-bottom:0px !important">
                                                                            @(cas.IsActive? "Active" : cas.IsDeleted == true ? "InActive" : "Not Set")
                                            </span>



                                            </div>

                                        </div>
                                </div>
                            </div>

