<body class="p-1">
    <nav aria-label="breadcrumb" class="mt-2">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/dashboard">Home</a></li>
            <li class="breadcrumb-item ">Drafting Library</li>
            <li class="breadcrumb-item active" aria-current="page">Notice of Entry</li>
        </ol>
    </nav>
    <div class="container p-4 rounded shadow-sm" style="height:95vh">

        <!-- Title Row -->
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h5 class="m-0 fw-bold">Notice Of Entry</h5>
        </div>

        <!-- Search Filters -->
        <div class="g-2 mb-3 d-flex justify-content-between align-items-center">
            <!-- Four default search boxes -->
             <button class="btn btn-primary" @onclick="ShowCreateform">Add New</button>
           
            <div class="position-relative w-25">
                <input class="form-control border border-primary text-navy" placeholder="Search.." @bind="searchTerm" @oninput="OnSearchChanged" />
                <button class="search-btn" type="button">
                    <i class="fa fa-search"></i>
                </button>
            </div>

        </div>

        <!-- Data Table -->
        <div style="max-height: 700px; overflow-y: auto; overflow-x: auto;">
            <table class="table table-bordered mt-4" style="min-width: 800px;">
                <thead class="table-light">
                    <tr>
                        <th class="text-center">Sl no</th>
                        <th>Form Type</th>
                        <th>Case Type</th>
                        <th>Created Date</th>
                         <th class="sticky">Actions</th> 
                    </tr>
                </thead>
                <tbody>
                    @if (pagedforms != null && pagedforms.Items.Any())
                    {
                        int index = 1;
                        @foreach (var form in pagedforms.Items)
                        {
                            <tr>
                                <td class="text-center">@index</td>
                                <td>@form.Name</td>
                                <td>@form.CaseTypeName</td>
                                <td>@form.CreatedOn.ToString("dd/MM/yyyy")</td>
                                <td class="sticky">
                                    <i class="fa-solid fa-pen-to-square text-navy me-3 " @onclick="() => ShowAddEditForm(form.Id)" style="cursor: pointer;" title="Edit"></i>
                                    <i class="fa-solid fa-trash-can text-danger " @onclick=" ()=>DeleteForm(form.Id.Value)" style="cursor: pointer;" title="Delete"></i>
                                </td>
                            </tr>
                            index++;
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="4" class="text-muted text-center">No notices generated yet.</td>
                        </tr>
                    } 
            
                </tbody>
            </table>
        </div>

        <!-- Pagination -->
        @if (pagedforms != null && pagedforms.TotalCount > 0)
        {
            <div class="d-flex justify-content-between mt-3">
                <small>
                    Showing @(((currentPage - 1) * pageSize) + 1)
                    to @(Math.Min(currentPage * pageSize, pagedforms.TotalCount))
                    of @pagedforms.TotalCount entries
                </small>
                <nav>
                    <ul class="pagination mb-0">
                        <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                            <button class="page-link" @onclick="() => ChangePage(currentPage - 1)">←</button>
                        </li>
                        @for (int i = 1; i <= Math.Ceiling((double)pagedforms.TotalCount / pageSize); i++)
                        {
                            var pageNumber = i;
                            <li class="page-item @(pageNumber == currentPage ? "active" : "")">
                                <button class="page-link" @onclick="() => ChangePage(pageNumber)">@pageNumber</button>
                            </li>
                        }
                        <li class="page-item @(currentPage == Math.Ceiling((double)pagedforms.TotalCount / pageSize) ? "disabled" : "")">
                            <button class="page-link" @onclick="() => ChangePage(currentPage + 1)">→</button>
                        </li>
                    </ul>
                </nav>
            </div>
        }


    </div>

    @if (_showCreateForm)
    {
        <CreateNoticeForm createForm="FormDto" OnClose="HandleCloseCreateform" />
    }

    @if (_showEditForm)
    {
        <EditNoticeForms editForm="FormDto" OnClose="HandleCloseEditForm" />
    }

</body>


@code {
    private bool _showCreateForm = false; 
    private bool _showEditForm = false;
    private Guid? formIdForEdit;
    private FormAddEditViewModelDto FormDto = new();
    private string successMessage;
    private int currentPage = 1;
    private int pageSize = 10;
    private string searchTerm = "";
    private PaginationDto<FormAddEditViewModelDto> pagedforms;

    protected override async Task OnInitializedAsync()
    {
        Spinnerservice.Show();
        var uri = new Uri(navManager.Uri);
        var query = Microsoft.AspNetCore.WebUtilities.QueryHelpers.ParseQuery(uri.Query);

        if (query.TryGetValue("success", out var isSuccess) && isSuccess == "true")
        {
            successMessage = "Notice form  submitted successfully!";
            StateHasChanged();

            await Task.Delay(2000);
            successMessage = string.Empty;
            StateHasChanged();

            navManager.NavigateTo("/Drafting/notice-of-entry", forceLoad: false);
        }

        // ✅ Edit success message
        else if (query.TryGetValue("edit", out var isEdit) && isEdit == "true")
        {
            successMessage = "Notice form  updated successfully!";
            StateHasChanged();

            await Task.Delay(2000);
            successMessage = string.Empty;
            StateHasChanged();

            navManager.NavigateTo("/Drafting/notice-of-entry", forceLoad: false);
        } 
        else if (query.TryGetValue("delete", out var isDeleted) && isDeleted == "true")
        {
            successMessage = "notice-of-entry form  deleted successfully!";
            StateHasChanged();

            await Task.Delay(2000);
            successMessage = string.Empty;
            StateHasChanged();
            navManager.NavigateTo("/Drafting/notice-of-entry", forceLoad: false);
        }
        await Task.Delay(1000);
        await LoadForms();
        Spinnerservice.Hide();
    }

    private async Task LoadForms()
    {
        pagedforms = await ManageFormService.GetAllNoticeOfEntryAsync(currentPage, pageSize, searchTerm);
    }

    private void ShowCreateform()
    {
        FormDto = new FormAddEditViewModelDto();
        _showCreateForm = true;
    }


    private void HandleCloseCreateform()
    {
        _showCreateForm = false;
    }

    private void HandleCloseEditForm()
    {
        _showEditForm = false;
    }

    private async Task OnSearchChanged(ChangeEventArgs e)
    {
        searchTerm = e.Value?.ToString() ?? string.Empty;
        currentPage = 1;
        await LoadForms();
    }


    private async Task ChangePage(int page)
    {
        if (page >= 1 && page <= Math.Ceiling((double)pagedforms.TotalCount / pageSize))
        {
            currentPage = page;
            await LoadForms();
        }
    }

    private async Task ShowAddEditForm(Guid? formId = null)
    {
        formIdForEdit = formId;

        var form = await ManageFormService.GetFormByIdAsync(formId);

        if (form != null)
        {
            FormDto = new FormAddEditViewModelDto
            {
                Id = form.Id,
                HTML = form.HTML,
                CaseTypeId = form.CaseTypeId,
                CategoryId = form.CategoryId,
                Name = form.Name,


            };

            _showEditForm = true;
        }
    }

    public async Task DeleteForm(Guid id)
    {
        Spinnerservice.Show();
        bool isDeleted = await ManageFormService.DeleteFormAsync(id);

        if (isDeleted)
        {
            successMessage = "notice form deleted successfully!";
            StateHasChanged();

            await Task.Delay(2000);
            successMessage = string.Empty;
            StateHasChanged();

            pagedforms = await ManageFormService.GetAllNoticeOfEntryAsync(currentPage, pageSize, searchTerm);
        }
        Spinnerservice.Hide();
    }


}

