<body class="p-4">

    <div class="container p-4 rounded shadow-sm">

        <!-- Title Row -->
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h5 class="m-0 head">Manage Firms</h5>
        </div>

        <!-- Search Filters -->
        <div class="g-2 mb-3 d-flex justify-content-between align-items-center">
            <!-- Four default search boxes -->
            <button class="btn btn-primary add-btn" style="width:120px;" @onclick="AddUser">Enroll Firm</button>
            <div class="position-relative w-50">
                <input class="form-control border border-primary text-navy" placeholder="Search.." @bind="searchTerm" @bind:event="oninput" />
                <button class="search-btn" type="button">
                    <i class="fa fa-search"></i>
                </button>
            </div>

        </div>

        <!-- Data Table -->
        <div class="table-responsive mb-3">
            <table class="table table-hover align-middle text-center" style="margin-bottom: 0px;">
                <thead>
                    <tr>
                        <th style="width:5px"></th>
                        <th>Firm Name</th>
                        <th>Phone</th>
                        <th>Email</th>
                        <th>FAX</th>
                        <th>Address</th>
                        <th>Subscription</th>
                        @* <th>Created At</th> *@
                        <th class="sticky">Action</th>
                    </tr>
                </thead>
                <tbody>

                    @if (PagedFirms.Count() > 0)
                    {
                        @*  @foreach (var user in Firms) *@
                        @foreach (var user in PagedFirms)
                        {
                            if (user != null)
                            {
                                <tr>
                                    <td style="width:5px; align-items:center">
                                        <button class="btn"
                                                @onclick="() => ToggleEmployees(user.Id)">
                                            @(expandedFirmId == user.Id ? "-" : "+")
                                        </button>
                                    </td>
                                    <td> @(user.Name ?? "") </td>
                                    <td>@(user.Phone ?? "")</td>
                                    <td>@(user.Email ?? "")</td>
                                    <td>@(user.FAX ?? "")</td>
                                    <td>@(user.Address ?? "")</td>
                                    <td>@(user.SubscriptionName ?? "")</td>
                                    @* <td>@(user?.CreatedOn)</td> *@
                                    <td class="sticky"><i class="fa-solid fa-pen-to-square" @onclick="() => EditFirm(user)"></i><span class="status-active ms-2">Active</span></td>
                                </tr>

                                @if (expandedFirmId == user.Id)
                                {
                                    <tr>
                                        <td colspan="10" style="padding-left: 0px; padding-right: 0px; padding-top: 12px;">
                                            @* <table class="table table-sm table-bordered"> *@
                                            <table class="table table-hover align-middle text-center table-sm" style="margin-bottom: 0px;">
                                                <thead class="table-light">
                                                    <tr>
                                                        <th>Name</th>
                                                        <th>Email</th>
                                                        <th>Role</th>
                                                     
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @if (firmEmployees.ContainsKey(user.Id) &&
                                                                                        firmEmployees[user.Id].Any())
                                                    {
                                                        @foreach (var emp in firmEmployees[user.Id])
                                                        {
                                                            <tr>
                                                                <td>@emp.FirstName @emp.LastName</td>
                                                                <td>@emp.Email</td>
                                                                <td>@emp.Role?.RoleName</td>
                                                                
                                                            </tr>
                                                        }
                                                    }
                                                    else
                                                    {
                                                        <tr>
                                                            <td colspan="3" class="text-muted">
                                                                No Employees Found
                                                            </td>
                                                        </tr>
                                                    }
                                                </tbody>
                                            </table>
                                        </td>
                                    </tr>
                                }
                            }
                        }

                    }
                    else
                    {
                        <tr>
                            <td colspan="7" class="text-muted">No Firm found.</td>
                        </tr>
                    }
                    <!-- repeat more data here -->
                </tbody>
            </table>
        </div>

        <!-- Pagination -->

        <div class="d-flex justify-content-between mt-3">
            <small>
                Showing @((currentPage - 1) * pageSize + 1) to @(Math.Min(currentPage * pageSize, Firms.Count())) of @Firms.Count() entries
            </small>

            <nav>
                <ul class="pagination mb-0">

                    <!-- Previous -->
                    <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                        <button type="button" class="page-link" @onclick="PreviousPage">←</button>
                    </li>

                    <!-- Page Numbers -->
                    @for (int i = 1; i <= totalPages; i++)
                    {
                        var pageNumber = i;
                        <li class="page-item @(currentPage == pageNumber ? "active" : "")">
                            <button type="button" class="page-link" @onclick="() => GoToPage(pageNumber)">@pageNumber</button>
                        </li>
                    }

                    <!-- Next -->
                    <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                        <button type="button" class="page-link" @onclick="NextPage">→</button>
                    </li>
                </ul>
            </nav>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>

    <EnrollFirm @ref="createFirm" Submit="Handle" />
    <EditFirm @ref="editFirm" Submit="Handle" />
</body>


@code {

    private Dictionary<Guid, List<UserDto>> firmEmployees = new();
    private Guid? expandedFirmId = null;

    private async Task ToggleEmployees(Guid firmId)
    {
        if (expandedFirmId == firmId)
        {
            expandedFirmId = null;
            return;
        }

        expandedFirmId = firmId;

        if (!firmEmployees.ContainsKey(firmId))
        {
            var employees = await _userService.GetUsersByFirmIdAsync(firmId);
            firmEmployees[firmId] = employees;
        }

        StateHasChanged();
    }


    private CreateUsers createUserRef;
    private EnrollFirm createFirm;
    private ValidationMessageStore messageStore;
    private EditContext _editContext;
    public RegisterDto registerDto { get; set; } = new RegisterDto();
    private async Task AddUser()
    {
        await createFirm.Show(registerDto);

        // var alluser = _userService.GetAllUserAsync();
    }
    private CancellationTokenSource _cts;

    public async Task Handle()
    {
        // Your existing DB logic here
        _cts?.Cancel(); // cancel previous call
        _cts = new CancellationTokenSource();
        var token = _cts.Token;
        await Task.Delay(1000, token);
        createFirm.Hide();
        // allFirms = await _firmservice.GetAllFirms();
        await GetAllFirms();

        StateHasChanged();
    }
    private IEnumerable<FirmDto> allFirms = new List<FirmDto>();

    private IEnumerable<FirmDto> Firms =>
       string.IsNullOrWhiteSpace(searchTerm)
       ? allFirms
       : allFirms.Where(c =>
           (!string.IsNullOrWhiteSpace(c.Name) && c.Name.Contains(searchTerm, StringComparison.OrdinalIgnoreCase)) ||
           (!string.IsNullOrWhiteSpace(c.Address) && c.Address.Contains(searchTerm, StringComparison.OrdinalIgnoreCase)) ||
           (!string.IsNullOrWhiteSpace(c.Email) && c.Email.Contains(searchTerm, StringComparison.OrdinalIgnoreCase)) ||
           (!string.IsNullOrWhiteSpace(c.SubscriptionName) && c.SubscriptionName.Contains(searchTerm, StringComparison.OrdinalIgnoreCase)));
    protected override async Task OnInitializedAsync()
    {
        spinnerservice.Show();
        await GetAllFirms();
        _editContext = new EditContext(registerDto);
        messageStore = new ValidationMessageStore(_editContext);
        spinnerservice.Hide();
    }



    private async Task GetAllFirms()
    {
        allFirms = await _firmservice.GetAllFirms();
        StateHasChanged();
    }

    // Reset page when search changes
    private string _searchTerm;
    private string searchTerm
    {
        get => _searchTerm;
        set
        {
            _searchTerm = value;
            currentPage = 1;
        }
    }

    //Pagintion Logic
    private int currentPage = 1;
    private int pageSize = 4;

    private int totalPages => Math.Max(1, (int)Math.Ceiling(Firms.Count() / (double)pageSize));

    private IEnumerable<FirmDto> PagedFirms => Firms.Skip((currentPage - 1) * pageSize).Take(pageSize);

    private void GoToPage(int page)
    {
        currentPage = page;
    }

    private void NextPage()
    {
        if (currentPage < totalPages)
            currentPage++;
        StateHasChanged();
    }

    private void PreviousPage()
    {
        if (currentPage > 1)
            currentPage--;
        StateHasChanged();
    }

    private EditFirm editFirm;

    private async Task EditFirm(FirmDto firm)
    {
        if (firm == null) return;

        // Load the user associated with this firm
        var userDto = await _userService.GetFirmOwnerAsync(firm.Id);
        if (userDto == null) return;

        var registerDto = new RegisterDto
        {
            Id = userDto.UserId,
            FirstName = userDto.FirstName,
            LastName = userDto.LastName,
            Email = userDto.Email,
            Role = userDto.Role?.RoleName ?? "Admin",
            FirmId = userDto.Firm?.FirmId,
            SubscriptionId = userDto.Firm?.UserSubscription?.SubscriptionId
        };

        var firmDto = new FirmDto
        {
            Id = firm.Id,
            Name = firm.Name,
            Email = firm.Email,
            Phone = firm.Phone,
            FAX = firm.FAX,
            Address = firm.Address,
            Website = firm.Website,
            SubscriptionTypeId = firm.SubscriptionTypeId
        };

        // Open the EditFirm
        await editFirm.ShowForEdit(registerDto, firmDto, firm.SubscriptionName!);
        //editFirm.CurrentStep = 3;
    }


}
